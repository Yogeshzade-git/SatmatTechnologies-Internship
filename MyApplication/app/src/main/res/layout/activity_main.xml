<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EBE9FB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/hamburger"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="20px"
                    android:src="@drawable/hamburger_3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/brand_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/lobsterregular"
                    android:text="@string/ezpay"
                    android:textColor="@color/icons_color1"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/bell"
                    app:layout_constraintStart_toEndOf="@+id/hamburger"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/bell"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/bell"
                    app:layout_constraintEnd_toStartOf="@+id/userlogo"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/userlogo"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/user_logo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10px"
                    android:layout_marginTop="10px"
                    android:layout_marginRight="10px"
                    android:background="@drawable/white_background"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/hamburger">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20px"
                        android:layout_marginTop="30px"
                        android:layout_marginRight="20px"
                        android:background="@drawable/white_background"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="0.25"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/qr_code"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/qr_code" />

                            <TextView
                                android:id="@+id/your_qr"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Your QR"
                                android:textAlignment="center"
                                android:textColor="@color/icons_color1"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="0.43"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/wallete"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/wallete" />

                            <TextView
                                android:id="@+id/your_balance"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="My Wallete Balance"
                                android:textAlignment="center"
                                android:textColor="@color/icons_color1"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="0.2"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/balance_your_balance"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/off_green_background"
                                android:gravity="center"
                                android:padding="5px"
                                android:text="â‚¹ 0.0"
                                android:textColor="@color/icons_color1"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20px"
                        android:layout_marginTop="0px"
                        android:layout_marginRight="20px"
                        android:background="@drawable/white_background"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="0.25"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/payout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/micro_atm2" />

                            <TextView
                                android:id="@+id/payout_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Payout"
                                android:textAlignment="center"
                                android:textColor="@color/icons_color1"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="0.43"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/aeps_wallete"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/wallete" />

                            <TextView
                                android:id="@+id/my_aeps_balance"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="My AEPS Balance"
                                android:textAlignment="center"
                                android:textColor="@color/icons_color1"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="0.2"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/aeps_balance"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/off_green_background"
                                android:gravity="center"
                                android:text="â‚¹ 3.2"
                                android:textColor="@color/icons_color1"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                    <com.denzcoskun.imageslider.ImageSlider
                        android:id="@+id/image_slider"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:layout_marginTop="12dp"
                        app:iss_auto_cycle="true"
                        app:iss_delay="1000"
                        app:iss_period="1000"
                        app:iss_text_align="CENTER"
                        android:layout_marginLeft="10px"
                        android:layout_marginRight="10px"/>


                </RelativeLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>